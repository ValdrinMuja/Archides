@model Archides.Models.Medium

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <meta charset="UTF-8" />
    <title>Krajee JQuery Plugins - &copy; Kartik</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/ContentAdminLayout/UploadImages/css/fileinput.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" media="all" rel="stylesheet" type="text/css" />
    <link href="../themes/explorer-fa/theme.css" media="all" rel="stylesheet" type="text/css" />
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="~/ContentAdminLayout/UploadImages/plugins/sortable.js"></script>
    <script src="~/ContentAdminLayout/UploadImages/fileinput.js"></script>
    <script src="~/ContentAdminLayout/UploadImages/theme/theme.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" type="text/javascript"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/ContentAdminLayout/UploadImages/theme/theme.js"></script>

</head>


@using (Html.BeginForm("Create", "Media", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="main-content">
        <div id="page-wrapper">
            <div class="graphs">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                            <form role="form">
                                <div class="mainDivUser">
                                    <h4>Upload Media for project here...</h4>
                                    <hr class="colorgraph">

                                    <div class="row">
                                        <div class="col-xs-12 col-sm-6 col-md-6">
                                            <div class="form-group">
                                                @Html.DropDownList("ProjektiID", null, htmlAttributes: new { @class = "form-control input-lg" })
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-6 col-md-6">
                                            <div class="form-group">
                                                @Html.DropDownList("MediaTypeID", null, htmlAttributes: new { @class = "form-control input-lg" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.DropDownList("LlojiArkitekturaID", null, htmlAttributes: new { @class = "form-control input-lg" })
                                    </div>


                                    <div class="form-group">
                                        <div class="file-loading">
                                            <input id="ProjectImages" type="file" name="ProjectImages" multiple class="file" data-overwrite-initial="false" data-min-file-count="2" />
                                        </div>
                                        <br />
                                        <br />
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12 col-md-6"><input type="submit" value="Create" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
                                        <div class="col-xs-12 col-md-6"><a href="#" class="btn btn-success btn-block btn-lg">Cancel</a></div>
                                    </div>

                                    <hr class="colorgraph">

                                </div>
                            </form>

                            <div>
                                @Html.ActionLink(" <--Back to List", "Index")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<script>
    $("#ProjectImages").fileinput({
        theme: 'fa',
        uploadUrl: '#', // you must set a valid URL here else you will get an error
        allowedFileExtensions: ['jpg', 'png', 'gif'],
        overwriteInitial: false,
        maxFileSize: 50000,
        maxFilesNum: 20,
        //allowedFileTypes: ['image', 'video', 'flash'],

    });
</script>
