@model Archides.Models.Projekti

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="main-content">
        <div id="page-wrapper">
            <div class="graphs">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                            <form role="form">
                                    <h4>Create New Project here...</h4>
                                    <hr class="colorgraph">
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-6 col-md-6">
                                            <div class="form-group">
                                                @Html.EditorFor(model => model.Titulli, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Write title of project here..." } })
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-6 col-md-6">
                                            <div class="form-group">
                                                @Html.DropDownList("Lokacioni", null, htmlAttributes: new { @class = "form-control input-lg", placeholder = "Write location of project here..." })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-6 col-md-6">
                                            <div class="form-group">
                                                @Html.EditorFor(model => model.Viti, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Write which year ended..." } })
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-6 col-md-6">
                                            <div class="form-group">
                                                @Html.EditorFor(model => model.Statusi, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Write status of project here..." } })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-6 col-md-6">
                                            <div class="form-group">
                                                @Html.EditorFor(model => model.Madhesia, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Write surface of project here..." } })
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-6 col-md-6">
                                            <div class="form-group">
                                                @Html.DropDownList("KategoriaID", null, htmlAttributes: new { @class = "form-control input-lg", placeholder = "Write category of project here..." })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        Project Description
                                        @Html.TextAreaFor(model => model.Pershkrimi, 15, 67, new { htmlAttributes = new { @class = "form-control", placeholder = "Write description of project here..." } })
                                    </div>

                                    <hr class="colorgraph">
                                    <div class="row">
                                        <div class="col-xs-12 col-md-6"><input type="submit" value="Create" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
                                        <div class="col-xs-12 col-md-6"><a href="#" class="btn btn-success btn-block btn-lg">Cancel</a></div>
                                    </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

