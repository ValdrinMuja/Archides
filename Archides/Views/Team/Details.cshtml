@model Archides.Models.Useri

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <!--[if IE]>
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <![endif]-->
    <title>Bootstrap user profile template</title>
    <!-- BOOTSTRAP STYLE SHEET -->
    <link href="assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONT-AWESOME STYLE SHEET FOR BEAUTIFUL ICONS -->
    <link href="assets/css/font-awesome.css" rel="stylesheet" />
    <link href="~/ContentAdminLayout/styleUser.css" rel="stylesheet" />
    <!-- CUSTOM STYLE CSS -->
    <style type="text/css">
        .btn-social {
            color: white;
            opacity: 0.8;
        }

            .btn-social:hover {
                color: white;
                opacity: 1;
                text-decoration: none;
            }

        .btn-facebook {
            background-color: #3b5998;
        }

        .btn-twitter {
            background-color: #00aced;
        }

        .btn-linkedin {
            background-color: #0e76a8;
        }

        .btn-google {
            background-color: #c32f10;
        }
    </style>
</head>
<body>

    <!-- NAVBAR CODE END -->


    <div class="container">
        <section style="padding-bottom: 50px; padding-top: 50px;">
            <div class="row">
                <div class="col-md-4">
                   
                    <img src="@Url.Content(Model.Foto)" class="img-rounded img-responsive" />
                    <br />
                    <br />
                    <label>Name:</label>
                    @Html.DisplayFor(model => model.Emri)
                    <br>
                    <label>Surname</label>
                    @Html.DisplayFor(model => model.Mbiemri)
                    <br>
                    <label>Gender</label>
                    @Html.DisplayFor(model => model.Gjinia)
                    <br>
                    <label>BirthPlace:</label>
                    @Html.DisplayFor(model => model.Qyteti.Qyteti1)
                    <br>
                    <label>BirthDate</label>
                    @Html.DisplayFor(model => model.Datelindja)
                    <br>
                    <label>Email</label>
                    @Html.DisplayFor(model => model.Email)
                    <br>
                    <label>Phone Number</label>
                    @Html.DisplayFor(model => model.Telefoni)
                    <br>
                    <label>Description </label>
                    @Html.DisplayFor(model => model.Pershkrimi)
                    <br>

                    <br /><br />
                </div>
                <div class="col-md-8">
                    <div class="projectsDivUser">
                        <h2>Projects that User worked : </h2>                     
                    </div>
                </div>
            </div>
            <!-- ROW END -->


        </section>
        <!-- SECTION END -->
    </div>
    <!-- CONATINER END -->
    <!-- REQUIRED SCRIPTS FILES -->
    <!-- CORE JQUERY FILE -->
    <script src="assets/js/jquery-1.11.1.js"></script>
    <!-- REQUIRED BOOTSTRAP SCRIPTS -->
    <script src="assets/js/bootstrap.js"></script>
</body>

</html>




